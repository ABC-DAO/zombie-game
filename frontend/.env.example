# Zombie Game Frontend Environment Variables
# Copy this to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3005

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_CHAIN_NAME=Base

# Smart Contract Addresses (update after deployment)
NEXT_PUBLIC_ZOMBIE_TOKEN_ADDRESS=TBD_DEPLOY_ADDRESS
NEXT_PUBLIC_ZOMBIE_GAME_CONTRACT_ADDRESS=TBD_DEPLOY_ADDRESS

# Wallet Connection
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# Farcaster Integration
NEXT_PUBLIC_FARCASTER_BOT_FID=TBD_BOT_FID
NEXT_PUBLIC_FARCASTER_BOT_USERNAME=zombie-bite

# Feature Flags
NEXT_PUBLIC_ENABLE_ZOMBIE_CLAIMING=true
NEXT_PUBLIC_ENABLE_FARCASTER_INTEGRATION=true
NEXT_PUBLIC_ENABLE_ZOMBIE_LEADERBOARDS=true
NEXT_PUBLIC_ENABLE_BITE_TRACKING=true

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Game Configuration
NEXT_PUBLIC_ZOMBIE_GAME_START=2025-10-31T08:00:00-07:00
NEXT_PUBLIC_ZOMBIE_GAME_END=2025-10-31T20:00:00-07:00
NEXT_PUBLIC_ZOMBIE_TIP_AMOUNT=1
NEXT_PUBLIC_ZOMBIE_TIP_EXPIRY_HOURS=4

# Production URLs (for production deployment)
# NEXT_PUBLIC_API_URL=https://zombiegame-backend-production.up.railway.app